  //Classe filme//

public class Filme {

	String titulo;
	double DuracaoEmMinutos;
	
	
	double exibirDuracaoEmHoras() {
		
		return DuracaoEmMinutos / 60;
	}
}


  //Classe principal//

public class Principal {
	public static void main(String[] args) {
		
		Filme filme1 = new Filme();
		
		filme1.titulo = "Os Vingadores";
		filme1.DuracaoEmMinutos = 142;
		
		System.out.println("\n Os Vingadores");
		System.out.println("A duração do filme é "+filme1.exibirDuracaoEmHoras()+" horas");
		
		Filme filme2 = new Filme();
		
		filme2.titulo = "Hotel Transilvânia";
		filme2.DuracaoEmMinutos = 93;
		
		System.out.println("\n Hotel Transilvânia");
		System.out.println("A duração do filme é "+filme2.exibirDuracaoEmHoras()+" horas");
		
		
		System.out.println("\n Os filmes em cartaz são "+filme1.titulo+" e "+filme2.titulo);
		
		//___________________________________________________________________________________________//
		
		Filme filme3 = new Filme();
		
		filme3.titulo = "Constantine";
		filme3.DuracaoEmMinutos = 163;
		
		System.out.println("\n Constantine");
		System.out.println("A duração do filme é "+filme3.exibirDuracaoEmHoras()+" horas");
		
		Filme filme4 = new Filme();
		
		filme4.titulo = "Bright";
		filme4.DuracaoEmMinutos = 117;
		
		System.out.println("\n Bright");
		System.out.println("A duração do filme é "+filme4.exibirDuracaoEmHoras()+" horas");
		
		Filme filme5 = new Filme();
		
		filme5.titulo = "Tomb Raider";
		filme5.DuracaoEmMinutos = 110;
		
		System.out.println("\n Tomb Raider");
		System.out.println("A duração do filme é "+filme5.exibirDuracaoEmHoras()+" horas");
		
		Filme filme6 = new Filme();
		
		filme6.titulo = "Anjos e demônios";
		filme6.DuracaoEmMinutos = 91;
		
		System.out.println("\n Anjos e demônios");
		System.out.println("A duração do filme é "+filme6.exibirDuracaoEmHoras()+" horas");
		
		Filme filme7 = new Filme();
		
		filme7.titulo = "Solomon Kane";
		filme7.DuracaoEmMinutos = 149;
		
		System.out.println("\n Solomon Kane");
		System.out.println("A duração do filme é "+filme7.exibirDuracaoEmHoras()+" horas");
		
		
	}

}
